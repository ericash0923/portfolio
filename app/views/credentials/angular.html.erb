<h1>Augluar Items</h1>

<%= link_to "Create New Item", new_credential_path if logged_in?(:site_admin) %>

<% @augular_portfolio_item.each do |portfolio_item| %>
  <p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
  <p><%=portfolio_item.subtitle %></p>
  <p><%=portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?  %>
  <%= link_to "Edit Item", edit_credential_path(portfolio_item) if logged_in?(:site_admin) %>
  <%= link_to 'Delete Portfolios Item', credential_path(portfolio_item), 
  method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
<% end %>