  <div class="col-md-4 col-sm-3 placeholder">
    <div class="card" style="width: 20rem;">
      <%= image_tag topic.image unless topic.image.nil? %>
      <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-block">
        <h4 class="card-title"><%= link_to topic.title, topic_path(topic) %></h4>
        <p><%= link_to 'Edit', edit_topic_path(topic) %></p>
        <p><%= link_to 'Delete', topic_path(topic), method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>

